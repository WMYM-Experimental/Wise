<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Wise.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Wise"
    xmlns:views="clr-namespace:Wise.Views"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="#FF5864">

    <ShellContent
            Title="SignupPage"
            ContentTemplate="{DataTemplate views:SignupPage}"
            Route="SignupPage"/>

    <ShellContent
            Title="LoginPage"
            ContentTemplate="{DataTemplate views:LoginPage}"
            Route="LoginPage"/>

    <ShellContent
            Title="ProfileSetupPage"
            ContentTemplate="{DataTemplate views:ProfileSetupPage}"
            Route="ProfileSetupPage"/>

    <ShellContent
            Title="UploadProfilePicPage"
            ContentTemplate="{DataTemplate views:UploadProfilePicPage}"
            Route="UploadProfilePicPage"/>

    <ShellContent
            Title="InterestsPage"
            ContentTemplate="{DataTemplate views:InterestsPage}"
            Route="InterestsPage"/>

    <ShellContent
            Title="FeedPage"
            ContentTemplate="{DataTemplate views:FeedPage}"
            Route="FeedPage"/>

    <ShellContent
            Title="ChatsPage"
            ContentTemplate="{DataTemplate views:ChatsPage}"
            Route="ChatsPage"/>

</Shell>
