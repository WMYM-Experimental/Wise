<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Wise.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Wise"
    xmlns:views="clr-namespace:Wise.Views"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="#FF5864">

    <TabBar>
        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate views:SignupPage}"/>
        
        <ShellContent
            Title="Login"
            ContentTemplate="{DataTemplate views:LoginPage}"/>

        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate views:ProfileSetupPage}"/>

        <ShellContent
            Title="Update"
            ContentTemplate="{DataTemplate views:UploadProfilePicPage}"/>

        <ShellContent
            Title="Interests"
            ContentTemplate="{DataTemplate views:InterestsPage}"/>

        <ShellContent
            Title="New Interests"
            ContentTemplate="{DataTemplate views:InputInterestPage}"/>

        <ShellContent
            Title="All Interests"
            ContentTemplate="{DataTemplate views:AllInterestsPage}"/>

    </TabBar>

</Shell>
