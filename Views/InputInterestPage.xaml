<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wise.Views.InputInterestPage"
             Title="InputInterestPage">


    <VerticalStackLayout
        Spacing="10" 
        Margin="5">

        <Editor
            x:Name="TextEditor"
            Placeholder="Enter your a new Interest"
            HeightRequest="45"/>

        <Grid
            ColumnDefinitions="*,*"
            ColumnSpacing="4">

            <Button
                Text="Save"
                TextColor="#F1F1F1"
                BackgroundColor="#FF5864"
                WidthRequest="100"
                CornerRadius="10"
                HorizontalOptions="Center"
                Clicked="SaveButton_Clicked" />

            <Button
                Grid.Column="1"
                TextColor="#F1F1F1"
                BackgroundColor="#FF5864"
                WidthRequest="100"
                CornerRadius="10"
                HorizontalOptions="Center"
                Text="Delete"
                Clicked="DeleteButton_Clicked" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>