                </StackLayout>

                <!--Going Out-->
                <StackLayout>
                    <StackLayout>
                        <Label Text="Creativity"/>
                    </StackLayout>

                    <StackLayout>
                        <HorizontalStackLayout>
                            <Label Text="Art"/>
                            <CheckBox>
                            </CheckBox>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="Art"/>
                            <CheckBox>
                            </CheckBox>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="Art"/>
                            <CheckBox>
                            </CheckBox>
                        </HorizontalStackLayout>
                    </StackLayout>
                </StackLayout>
            </VerticalStackLayout>

            <!--Upload Button-->
            <StackLayout>
                <Button
                Text="Upload"
                TextColor="#F1F1F1"
                BackgroundColor="#FF5864"
                WidthRequest="100"
                CornerRadius="10"
                HorizontalOptions="Center"/>
            </StackLayout>

        </FlexLayout>
    </ScrollView>
</ContentPage>
